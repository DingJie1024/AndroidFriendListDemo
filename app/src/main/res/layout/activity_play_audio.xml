<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		tools:context=".PlayAudioActivity">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
		<androidx.appcompat.widget.Toolbar
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/colorPrimary"
				android:theme="?attr/actionBarTheme"
				android:minHeight="?attr/actionBarSize"
				android:id="@+id/id_play_audio_toolBar"
				app:navigationIcon="@drawable/abc_vector_test"
				android:orientation="vertical"
		>
			<TextView
					android:id="@+id/id_play_audio_title_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="音乐一"
					android:textSize="30sp"
					android:layout_gravity="center"/>
		</androidx.appcompat.widget.Toolbar>


	</LinearLayout>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="50dp">
		<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@mipmap/audio_01"/>
	</LinearLayout>
	<LinearLayout
			android:layout_marginTop="20dp"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="vertical">
		<SeekBar
				android:id="@+id/id_play_audio_seekBar"
				android:layout_gravity="center"
				android:layout_width="350dp"
				android:layout_height="match_parent"
				android:max="100"
		/>
	</LinearLayout>
	<LinearLayout
			android:layout_width="350dp"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center"
			android:gravity="right"
			android:paddingRight="15dp">
		<TextView
				android:id="@+id/id_play_audio_current_time_hour_txt"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="00"
				android:textSize="13sp"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text=":"
				android:textSize="13sp"
		/>
		<TextView
				android:id="@+id/id_play_audio_current_time_minutes_txt"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="00"
				android:textSize="13sp"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text=":"
				android:textSize="13sp"
		/>
		<TextView
				android:id="@+id/id_play_audio_current_time_second_txt"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="00"
				android:textSize="13sp"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="/"
				android:textSize="13sp"
		/>
		<TextView
				android:id="@+id/id_play_audio_total_time_hour_txt"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="00"
				android:textSize="13sp"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text=":"
				android:textSize="13sp"
		/>
		<TextView
				android:id="@+id/id_play_audio_total_time_minutes_txt"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="00"
				android:textSize="13sp"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text=":"
				android:textSize="13sp"
		/>
		<TextView
				android:id="@+id/id_play_audio_total_time_second_txt"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="00"
				android:textSize="13sp"
		/>
	</LinearLayout>
	<LinearLayout
			android:layout_marginTop="20dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center">
		<Button
				android:onClick="onAudioPreviousClick"
				android:id="@+id/id_play_audio_previous_btn"
				android:layout_marginRight="10dp"
				android:layout_width="80dp"
				android:layout_height="50dp"
				android:text="上一个"/>
		<Button
				android:onClick="onAudioPlayClick"
				android:id="@+id/id_play_audio_play_btn"
				android:layout_marginRight="10dp"
				android:layout_width="60dp"
				android:layout_height="50dp"
				android:text="播放"/>
		<Button
				android:onClick="onAudioStopClick"
				android:id="@+id/id_play_audio_stop_btn"
				android:layout_marginRight="10dp"
				android:layout_width="60dp"
				android:layout_height="50dp"
				android:text="停止"/>
		<Button
				android:onClick="onAudioNextClick"
				android:id="@+id/id_play_audio_next_btn"
				android:layout_marginRight="10dp"
				android:layout_width="80dp"
				android:layout_height="50dp"
				android:text="下一个"/>
	</LinearLayout>
</LinearLayout>